                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:id="@+id/desig"
                                android:textSize="@dimen/_9sdp"
                                android:textColor="@android:color/black"
                                android:text="first"/>
                        </LinearLayout>

                        <View
