                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:text="Address"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Class"
                                android:textStyle="bold"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="First Name"
                                android:textSize="@dimen/_9sdp"
                                android:textColor="@android:color/black"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:id="@+id/address"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="7">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="First Name"
                                    android:textSize="@dimen/_9sdp"
                                    android:textColor="@android:color/black"
                                    android:id="@+id/classid"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.50dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@android:color/black"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:text="Father Occupation"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Mobile No."
                                android:textStyle="bold"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:textColor="@android:color/black"
                                android:id="@+id/voterid"
                                android:textSize="@dimen/_9sdp"
                                android:text="City"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Email"
                                android:textSize="@dimen/_9sdp"
                                android:textColor="@android:color/black"
                                android:id="@+id/bloodgroup"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.50dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@android:color/black"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:text="Mother Occupation"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Aadhar ID."
                                android:textStyle="bold"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:textColor="@android:color/black"
                                android:id="@+id/pancard"
                                android:textSize="@dimen/_9sdp"
                                android:text="City"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Email"
                                android:textSize="@dimen/_9sdp"
                                android:textColor="@android:color/black"
                                android:id="@+id/aadharcard"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.50dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@android:color/black"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:text="Samagar ID."/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Admission Fee."
                                android:textStyle="bold"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:textColor="@android:color/black"
                                android:id="@+id/samagarid"
                                android:textSize="@dimen/_9sdp"
                                android:text="City"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Email"
                                android:textSize="@dimen/_9sdp"
                                android:textColor="@android:color/black"
                                android:id="@+id/salary"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.50dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@android:color/black"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:text="Gender."/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Vehicle."
                                android:textStyle="bold"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:textColor="@android:color/black"
                                android:id="@+id/joining"
                                android:textSize="@dimen/_9sdp"
                                android:text="City"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Email"
                                android:textSize="@dimen/_9sdp"
                                android:textColor="@android:color/black"
                                android:id="@+id/qualification"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.50dp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@android:color/black"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:text="DOB."/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Vehicle No."
                                android:textStyle="bold"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:textColor="@android:color/black"
                                android:id="@+id/salary1"
                                android:textSize="@dimen/_9sdp"
                                android:text="City"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Email"
