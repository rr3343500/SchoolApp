<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"

                        >
                        <TextView
                            android:textColor="@android:color/white"
                            android:id="@+id/appname"
                            android:textSize="@dimen/_18sdp"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dashboard"
                            android:textStyle="bold"
                            android:padding="5dp"/>
                    </androidx.appcompat.widget.Toolbar>

                </com.google.android.material.appbar.AppBarLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/ic_account_circle_black_24dp"
                        android:layout_gravity="center"
                       />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:id="@+id/name"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.25dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@android:color/white"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="9"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Class"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@android:color/white"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="None"
                                android:id="@+id/classname"
                                android:layout_gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_14sdp"
                                android:gravity="center"/>

                        </LinearLayout>
                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Section"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@android:color/white"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="None"
                                android:id="@+id/section"
                                android:textColor="@android:color/white"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_14sdp"
                                android:gravity="center"/>

                        </LinearLayout>
                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Designation"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@android:color/white"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Student"
                                android:textColor="@android:color/white"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_14sdp"
                                android:gravity="center"/>

                        </LinearLayout>
                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.25dp"
                        android:background="@android:color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:weightSum="9"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:id="@+id/attendence"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/ic_email_black_24dp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_gravity="center"

                                ></de.hdodenhof.circleimageview.CircleImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:text="Attendence"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@android:color/black"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:id="@+id/liveclassess"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/ic_live_tv_black_24dp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_gravity="center"

                                ></ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:text="Live Classes"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@android:color/black"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/pricipal"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/ic_message_black_24dp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_gravity="center"

                                ></de.hdodenhof.circleimageview.CircleImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:text="Principal\nMessage "
                                android:textColor="@android:color/black"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:weightSum="6"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:id="@+id/pdf"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/ic_note_add_black_24dp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_gravity="center"

                                ></de.hdodenhof.circleimageview.CircleImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:text="Documents"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@android:color/black"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:id="@+id/exam"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/ic_note_add_black1_24dp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_gravity="center"

                                ></de.hdodenhof.circleimageview.CircleImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:text="Exams"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@android:color/black"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@android:color/white"
                app:labelVisibilityMode="labeled"
                app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:menu="@menu/bottom_navigation"
                app:itemTextColor="#333F81"
                app:itemIconTint="@drawable/bottom_navigation_selector"/>
        </RelativeLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        app:menu="@menu/slidedrawable"
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="#333F81"
        app:itemIconTint="@drawable/bottom_navigation_selector"
        android:id="@+id/navigationView"
        />
</androidx.drawerlayout.widget.DrawerLayout>